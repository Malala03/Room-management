@model RoomManagement.Models.Room

@{
    ViewData["Title"] = "Ajouter une Chambre";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informations de la chambre</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="RoomNumber" class="form-label">Numéro de chambre</label>
                        <input asp-for="RoomNumber" class="form-control" required maxlength="5" />
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label">Type de chambre</label>
                        <select asp-for="Type" class="form-select" required>
                            <option value="">Sélectionner un type</option>
                            <option value="Simple">Simple</option>
                            <option value="Double">Double</option>
                            <option value="Familiale">Familiale</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PricePerNight" class="form-label">Prix par nuit</label>
                        <div class="input-group">
                            <span class="input-group-text">Ariary</span>
                            <input asp-for="PricePerNight" class="form-control" required type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="PricePerNight" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Statut" class="form-label">Statut</label>
                        <select asp-for="Statut" class="form-select" required>
                            <option value="true">Libre</option>
                            <option value="false">Occupé</option>
                        </select>
                        <span asp-validation-for="Statut" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}