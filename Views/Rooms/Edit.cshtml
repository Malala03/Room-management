@model RoomManagement.Models.Room

@{
    ViewData["Title"] = "Modifier une Chambre";
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="RoomNumber" class="control-label"></label>
                    <input asp-for="RoomNumber" class="form-control" maxlength="5" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="Simple">Simple</option>
                        <option value="Double">Double</option>
                        <option value="Familiale">Familiale</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PricePerNight" class="control-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">Ariary</span>
                        <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" min="0" />
                    </div>
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Statut" class="control-label"></label>
                    <select asp-for="Statut" class="form-control">
                        <option value="true">Libre</option>
                        <option value="false">Occupée</option>
                    </select>
                    <span asp-validation-for="Statut" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}